@using System.Web.Mvc.Html
@using inventoryAppWebUi.Models
@using Ninject.Infrastructure.Language

@model RegisterViewModel

@{
    ViewBag.Title = "Sign Up";
}

<div class="wrapper">

    <section class="login-content">
        <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
                <div class="col-lg-8">
                    <div class="card auth-card">
                        <div class="card-body p-0">
                            <div class="d-flex align-items-center auth-content">
                                <div class="col-lg-7 align-self-center">
                                    <div class="p-3">
                                        <h2 class="mb-2">Sign Up</h2>
                                        <p>Create your POSDash account.</p>


                                        @using (Html.BeginForm("SignUp", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            <div class="">
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control textbox", placeholder = "Email" })
                                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "First Name" } })
                                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Last Name" } })
                                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-sm-12">
                                                        @Html.DropDownListFor(model => model.RoleName, new SelectList(Model.Roles), "Select Role", new { @class = "form-control textbox" })
                                                    </div>
                                                </div>
                                            </div>


                                            <button type="submit" class="btn btn-primary">Sign Up</button>
                                            <p class="mt-3">
                                                Already have an Account <a href=@Html.ActionLink("here", "Login") class="text-primary">Sign In</a>
                                            </p>



                                        }
                                    </div>
                                </div>
                                <div class="col-lg-5 content-right">
                                    <img src="~/Content/assets/images/login/01.png" class="img-fluid image-right" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
@Scripts.Render("~/bundles/js")
@Scripts.Render("~/bundles/jqueryval")