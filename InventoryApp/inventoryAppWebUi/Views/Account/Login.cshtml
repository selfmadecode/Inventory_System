@using inventoryAppWebUi.Models
@model inventoryAppWebUi.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="shortcut icon" href="http://iqonic.design/themes/posdash/html/assets/images/favicon.ico" />

    <title>Inventory System</title>
    

    @Styles.Render("~/Content/template/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body class="auth-bg">
    

    <!-- loader Start -->
    <div id="loading">
        <div id="loading-center">
        </div>
    </div>
    <!-- loader END -->
<div class="wrapper">
    <!-- Page Content  -->
    <section class="login-content">
        <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
                <div class="col-lg-8">
                    <div class="card auth-card">
                        <div class="card-body p-0">
                            <div class="d-flex align-items-center auth-content">
                                <div class="col-lg-7 align-self-center">
                                    <div class="p-3">
                                        <h2 class="mb-2">Sign In</h2>
                                        <p>Login to stay connected.</p>
                                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "widget-form", role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control textbox", name = "user", placeholder = "Email" })
                                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                        @*<label>Email</label>*@
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control textbox", type = "password", name = "user", placeholder = "Password" })
                                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                        @*<label>Password</label>*@
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="custom-control custom-checkbox mb-3">
                                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                                                        @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
                                                    </div>
                                                </div>
                                                @*<div class="col-lg-6">
                                                    <a href="auth-recoverpw.html" class="text-primary float-right">Forgot Password?</a>
                                                </div>*@
                                            </div>
                                            <button type="submit" class="btn btn-primary">Sign In</button>
                                            <p class="mt-3">
                                                New User? Sign Up
                                                @Html.ActionLink("Here", "SignUp")

                                                @*<a href="sign-up.html">Sign Up</a> Here*@
                                            </p>
                                            
                                        }

                                    </div>
                                </div>
                                <div class="col-lg-5 content-right">
                                    <img src="~/Content/assets/images/login/02.png" class="img-fluid image-right" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Page Content  -->
            @Scripts.Render("~/bundles/js")
            @Scripts.Render("~/bundles/jqueryval")
        

    </div>
</body>

</html>
