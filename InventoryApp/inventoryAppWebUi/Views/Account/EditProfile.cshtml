@using System.Web.Mvc.Html
@using System.Web.UI.WebControls
@using inventoryAppWebUi.Models
@using Ninject.Infrastructure.Language
@model inventoryAppWebUi.Models.EditProfileViewModel

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div id="content">
        <div class="container-fluid">
            <span>
                <img src="~/Content/Assets/images/logo.png" class="logo" alt="logo" style="height: 50px; padding-top: 4px; margin-left: 10px">
            </span>
            <div class="row" id="formContainer">
                <div class="col-sm-6 auth-box">
                    <div class="proclinic-box-shadow" id="form" style="margin-top: 70px">
                        <h2 class="widget-title">@ViewBag.Title</h2>

                        @using (Html.BeginForm("EditProfile", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                        {
                            @Html.AntiForgeryToken()
                            {
                                if (!string.IsNullOrEmpty(ViewBag.PasswordMisMatch))
                                {
                                    <p>@ViewBag.PasswordMisMatch</p>
                                }
                            }

                            @*<h4>EditProfileViewModel</h4>
                            <hr />*@
                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "Email"}})
                                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.UserName, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "Username"}})
                                    @Html.ValidationMessageFor(model => model.UserName, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.FirstName, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "First Name"}})
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.LastName, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "Last Name"}})
                                    @Html.ValidationMessageFor(model => model.LastName, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.OldPassword, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "Old Password"}})
                                    @Html.ValidationMessageFor(model => model.OldPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.NewPassword, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "New Password"}})
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.EditorFor(model => model.ConfirmPassword, new {htmlAttributes = new {@class = "form-control textbox", PlaceHolder = "Confirm Password"}})
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new {@class = "text-danger"})
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <input type="submit" value="Create" class="btn btn-primary col-sm-12"/>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/js")
@Scripts.Render("~/bundles/jqueryval")