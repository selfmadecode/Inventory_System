@using System.Globalization
@*@model inventoryAppWebUi.Models.DrugViewModel*@
@model inventoryAppWebUi.Models.EditCategoryViewModel



<head>
    @Styles.Render("~/Content/template/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<div id="quill-toolbar1">

    @using (Ajax.BeginForm("UpdateDrugCategory", "Drug", null, new AjaxOptions
    {
        OnSuccess = "OnCategoryAdded",
        OnFailure = "OnFailure"
    }, new { @class = "form-horizontal", id = "form", role = "form" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-sm-12">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control textbox", PlaceHolder = "Category Name" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="Add" class="btn btn-primary col-sm-12" style="height: 3rem" />
            </div>
        </div>
    }
</div>